{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bookshelf-client/api": ["libs/api/src/index.ts"],
      "@bookshelf-client/api/server": ["libs/api/src/server.ts"],
      "@bookshelf-client/extension/components": [
        "libs/extension/components/src/index.ts"
      ],
      "@bookshelf-client/extension/components/server": [
        "libs/extension/components/src/server.ts"
      ],
      "@bookshelf-client/extension/scripts": [
        "libs/extension/scripts/src/index.ts"
      ],
      "@bookshelf-client/extension/utils": [
        "libs/extension/utils/src/index.ts"
      ],
      "@bookshelf-client/hooks": ["libs/hooks/src/index.ts"],
      "@bookshelf-client/hooks/server": ["libs/hooks/src/server.ts"],
      "@bookshelf-client/store": ["libs/store/src/index.ts"],
      "@bookshelf-client/store/server": ["libs/store/src/server.ts"],
      "@bookshelf-client/ui": ["libs/ui/src/index.ts"],
      "@bookshelf-client/ui/server": ["libs/ui/src/server.ts"],
      "@bookshelf-client/utils": ["libs/utils/src/index.ts"],
      "@bookshelf-client/utils/server": ["libs/utils/src/server.ts"],
      "@bookshelf-client/web/components": ["libs/web/components/src/index.ts"],
      "@bookshelf-client/web/components/server": [
        "libs/web/components/src/server.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
